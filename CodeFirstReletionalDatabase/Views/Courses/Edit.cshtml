@model CodeFirstReletionalDatabase.Models.Course
@{
    ViewBag.Title = "Edit";
}


<div class="row">
    <div class="col-12">
        <h2>Create new Course</h2>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x=>x.CourseId)
            <div class="form-group row mb-2">
                @Html.LabelFor(x => x.CourseName, new { @class = "col-form-label text-end col-2" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.CourseName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CourseName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6 offset-2">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        }
    </div>
</div>
@section script{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

