@model IEnumerable<CodeFirstReletionalDatabase.Models.Course>
@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-12">
        <h2>Course List</h2>
        <div class="d-flex justify-content-end">
            @Html.ActionLink("Create", "Create", "Courses", new { }, new { @class="btn btn-sm btn-primary"})
        </div>
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(x=>x.CourseName)</th>
                    <th>---</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
            {
                foreach(var c in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x=>c.CourseName)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Courses", new { id = c.CourseId }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Delete", "Delete", "Courses", new { id=c.CourseId}, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">No Data Here</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12">
        @Html.ActionLink("Back to List","Index","Courses")
    </div>
</div>

